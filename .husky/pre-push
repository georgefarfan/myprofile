#!/usr/bin/env sh
set -e

echo "ğŸª Husky pre-push hook triggered"

echo "ğŸ” Checking production build requirements..."

# (optional) skip the build with SKIP_BUILD=1
if [ "$SKIP_BUILD" = "1" ]; then
    echo "â­  SKIP_BUILD=1 â†’ skipping build"
    exit 0
fi

# (optional) type check before the build â€” fail early if TS errors are present
if command -v npm >/dev/null 2>&1; then
    echo "ğŸ§ª Running type check..."
    if npm run -s typecheck 2>/dev/null; then
        echo "âœ… Type check passed"
    else
        echo "âš ï¸ Type check failed (but continuing to build)"
    fi
fi

# Build (uses your current Turbopack build script)
